      tools:ignore="SystemPermissionTypo"
      tools:node="remove" />
  <uses-permission
      android:name="${applicationId}.permission.WRITE_TASKS"
      tools:node="remove" />
  <uses-permission
      android:name="org.tasks.permission.READ_TASKS"
      tools:ignore="SystemPermissionTypo"
      tools:node="remove" />
